ul.list-group
    li.list-group-item(ng-repeat="ad in ads")
        div.row
            div.col-xs-12.col-sm-2
                img(src="images/background.jpg" alt="appartment" width="100%")
            div.col-xs-12.col-sm-10
                h4.list-group-item-heading {{ ad.title }}
                p.text-muted.
                    ajout√© par {{ ad.user.username }} <span am-time-ago="ad.createdAt"></span> depuis <a href="{{ ad.getURI().domain() }}" class="logo {{ ad.getURI().domain().replace('.', '') }}">{{ ad.getURI().domain() }}</a>
                ul.list-inline
                    li
                        a.text-muted(href="{{ ad.url }}") voir sur le site